import turtle

turtle.setup(400,500)                # Determine the window size
wn = turtle.Screen()                 # Get a reference to the window
wn.title("Handling keypresses!")     # Change the window title
wn.bgcolor("lightgreen")             # Set the background color
tess = turtle.Turtle()               # Create our favorite turtle

def color_background():
    return wn.bgcolor("white")

def color_red():
    return tess.color("red")

def color_green():
    return tess.color("green")

def color_blue():
    return tess.color("blue")

def size_plus():
    size = tess.pensize()
    if size < 20:
        size += 1
    return tess.pensize(size)

def size_minus():
    size = tess.pensize()
    if size > 1:
        size -= 1
    return tess.pensize(size)

# The next four functions are our "event handlers".
def h1():
   tess.forward(30)

def h2():
   tess.left(45)

def h3():
   tess.right(45)

def h4():
    wn.bye()                        # Close down the turtle window

# These lines "wire up" keypresses to the handlers we've defined.
wn.onkey(h1, "Up")
wn.onkey(h2, "Left")
wn.onkey(h3, "Right")
wn.onkey(h4, "q")
wn.onkey(color_red, "r")
wn.onkey(color_green, "g")
wn.onkey(color_blue, "b")
wn.onkey(size_plus, "plus")
wn.onkey(size_minus, "minus")
wn.onkey(color_background, "space")



# Now we need to tell the window to start listening for events,
# If any of the keys that we're monitoring is pressed, its
# handler will be called.
wn.listen()
wn.mainloop()
